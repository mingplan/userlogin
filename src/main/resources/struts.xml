<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.action.extension" value="do" />

	<package name="userlogin" extends="struts-default">

		<!-- interceptors> <interceptor name="loginInterceptor" class="loginInterceptor"> 
			<param name=""></param> </interceptor> <interceptor-stack name="loginInterceptor"> 
			<interceptor-ref name="myInterceptor"></interceptor-ref> <interceptor-ref 
			name="defaultStack"></interceptor-ref> </interceptor-stack> </interceptors -->

		<action name="userAction" class="userAction">
			<result name="prepareLogin">/user/login.jsp</result>
			<result name="prepareRegister">/user/register.jsp</result>
			<result name="loginSuccess">/user/user_home.jsp</result>
			<result name="registerSuccess">/user/login.jsp</result>
		</action>
	</package>

</struts>