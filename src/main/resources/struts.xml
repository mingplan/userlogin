<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.action.extension" value="do" />

	<package name="userlogin" namespace="" extends="struts-default">
	
		<interceptors>
			<interceptor name="myInterceptor" class="myInterceptor"></interceptor>
			<interceptor-stack name="myDefult">
				<interceptor-ref name="myInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<action name="userLogin" class="userAction" method="userLogin">
			<result name="success"></result>
			<result name="FAILED"></result>
		</action>
		<action name="userRegister" class="userAction" method="userRegister">
			<result name="success"></result>
			<result name="FAILED"></result>
		</action>
		<action name="prepareLogin" class="userAction" method="prepareLogin">
			<result name="success">/user/login.jsp</result>
		</action>
		<action name="prepareRegister" class="userAction" method="prepareRegister">
			<result name="success">/user/register.jsp</result>
		</action>						
	</package>

</struts>